#!/bin/sh

TARGET_PLATFORM=/Applications/Xcode.app/Contents/Developer/Platforms/iPhoneOS.platform/Developer/SDKs/iPhoneOS7.0.sdk
TARGET_GCC=/Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/bin/clang
TARGET_CFLAGS="-isysroot $TARGET_PLATFORM -miphoneos-version-min=7.0"

args=$@

# When we see a .s output file:
# -o ABC.s

# replace with two calls:
# -o ABC-armv7.s -arch armv7
# -o ABC-armv7s.s -arch armv7s

# When we see a .s input file and a .o output file:
# -c ABC.s -o DEF.o

# replace with two calls:
# -c ABC-armv7.s -o DEF-armv7.o -arch armv7
# -c ABC-armv7s.s -o DEF-armv7s.o -arch armv7s
# and then:
# lipo DEF-armv7.o DEF-armv7s.o to DEF.o

# When we see
# -o ABC.o
# replace with two calls:
# -o ABC-armv7.o -arch armv7
# -o ABC-armv7s.o -arch armv7s
# and then:
# lipo ABC-armv7.o ABC-armv7s.o to ABC.o

# Check if we're building an object file by looking for "-o file.o", and find its filename
# we use s|_|\1|p where _ is the match, \1 replaces it with the group in the match
# sed's -E allows extended regexes (cleaner syntax), -n suppresses non-matching input, the |p flag prints matches.
outFileNameO=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.o.*|\1|p')
outFileNameP_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.p_o.*|\1|p')
outFileNameL_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.l_o.*|\1|p')
outFileNameDEBUG_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.debug_o.*|\1|p')
outFileNameTHR_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.thr_o.*|\1|p')
outFileNameTHR_DEBUG_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.thr_debug_o.*|\1|p')
outFileNameTHR_L_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.thr_l_o.*|\1|p')
outFileNameTHR_P_O=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.thr_p_o.*|\1|p')
outFileNameS=$(echo "$args" | sed -En 's|.*-o ([^.]*)\.s.*|\1|p')

# A terrible hack:
# If the .s file is generated by llc rather than us, llc won't generate the -armv7 and -armv7s variants
# (we could write a arm-apple-darwin10-llc to do that, and then we could correctly pass '-mattr=+v7,+vfp3' to armv7 and '-mattr=+v7,+vfp4' to armv7s)
# So we just copy its output here.
inFileNameS=$(echo "$args" | sed -En 's|.*-c ([^.]*)\.s.*|\1|p')
if [[ -f $inFileNameS.s ]]; then
    cp $inFileNameS.s $inFileNameS-armv7.s
    cp $inFileNameS.s $inFileNameS-armv7s.s
fi

# Support for profiling libraries used by ghc
# Only need lipo when we're outputting object files
if [[ -n $outFileNameO ]]; then
    objectExt=o
    outFileName=$outFileNameO
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameP_O ]]; then
    objectExt=p_o
    outFileName=$outFileNameP_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameL_O ]]; then
    objectExt=l_o
    outFileName=$outFileNameL_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameDEBUG_O ]]; then
    objectExt=debug_o
    outFileName=$outFileNameDEBUG_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameTHR_O ]]; then
    objectExt=thr_o
    outFileName=$outFileNameTHR_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameTHR_DEBUG_O ]]; then
    objectExt=thr_debug_o
    outFileName=$outFileNameTHR_DEBUG_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameTHR_L_O ]]; then
    objectExt=thr_l_o
    outFileName=$outFileNameTHR_L_O
    needLipo=true
    needFatCall=true
elif [[ -n $outFileNameTHR_P_O ]]; then
    objectExt=thr_p_o
    outFileName=$outFileNameTHR_P_O
    needLipo=true
    needFatCall=true
fi

# Need fat calls for generating either .s or .o files
if [[ -n $outFileNameS ]]; then

    needFatCall=true

fi

if [[ $needFatCall == true ]]; then
    #generate -armv7 and -armv7s variants of any .s and .o and .p_o files
    argsArmv7=${args/.s/-armv7.s}
    argsArmv7=${argsArmv7/.o/-armv7.o}
    argsArmv7=${argsArmv7/.p_o/-armv7.p_o}
    argsArmv7=${argsArmv7/.l_o/-armv7.l_o}
    argsArmv7=${argsArmv7/.debug_o/-armv7.debug_o}
    argsArmv7=${argsArmv7/.thr_o/-armv7.thr_o}
    argsArmv7=${argsArmv7/.thr_debug_o/-armv7.thr_debug_o}
    argsArmv7=${argsArmv7/.thr_l_o/-armv7.thr_l_o}
    argsArmv7=${argsArmv7/.thr_p_o/-armv7.thr_p_o}
    argsArmv7s=${args/.s/-armv7s.s}
    argsArmv7s=${argsArmv7s/.o/-armv7s.o}
    argsArmv7s=${argsArmv7s/.p_o/-armv7s.p_o}
    argsArmv7s=${argsArmv7s/.l_o/-armv7s.l_o}
    argsArmv7s=${argsArmv7s/.debug_o/-armv7s.debug_o}
    argsArmv7s=${argsArmv7s/.thr_o/-armv7s.thr_o}
    argsArmv7s=${argsArmv7s/.thr_debug_o/-armv7s.thr_debug_o}
    argsArmv7s=${argsArmv7s/.thr_l_o/-armv7s.thr_l_o}
    argsArmv7s=${argsArmv7s/.thr_p_o/-armv7s.thr_p_o}
    # Call clang twice, once for each architecture, outputting to our filename variants
    $TARGET_GCC $TARGET_CFLAGS -arch armv7 $argsArmv7
    $TARGET_GCC $TARGET_CFLAGS -arch armv7s $argsArmv7s
else
    # echo "Non-object-generating compile command: $TARGET_GCC $TARGET_CFLAGS -arch armv7s $@"
    # If not building object files, call regularly. Still need to include an arch to configure clang for arm mode.
    exec $TARGET_GCC $TARGET_CFLAGS -arch armv7s "$@"
fi

if [[ $needLipo == true ]]; then
    outFileNameOArmv7=$outFileName-armv7.$objectExt
    outFileNameOArmv7s=$outFileName-armv7s.$objectExt

    # Lipo the two filename variants together
    lipo $outFileNameOArmv7 $outFileNameOArmv7s -create -output $outFileName.$objectExt

    # Clean up
    rm $outFileNameOArmv7 $outFileNameOArmv7s
fi
